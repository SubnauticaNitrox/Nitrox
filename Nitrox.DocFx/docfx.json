{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "memberLayout": "separatePages",
      "namespaceLayout": "nested"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],

    "globalMetadata": {
      "_appName": "Nitrox",
      "_appTitle": "Nitrox",
      "_gitContribute": {
	"repo": "https://github.com/SubnauticaNitrox/Nitrox",
	"branch": "master"
      },
      "_enableSearch": true,
      "pdf": false
    }
  }
}
