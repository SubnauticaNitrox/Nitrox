<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:design="clr-namespace:Nitrox.Launcher.Models.Design"
             xmlns:controls="clr-namespace:Nitrox.Launcher.UI.Controls"
             DataContext="{x:Static design:DesignData.CommunityViewModel}"
             mc:Ignorable="d" d:DesignWidth="1000"
             x:Class="Nitrox.Launcher.Views.CommunityView">

    <UserControl.Styles>
        <Style Selector="controls|FittingWrapPanel">
            <Setter Property="Margin" Value="-4 0" />
            <Style Selector="^ > Border">
                <Setter Property="Background" Value="{DynamicResource BrandPanelBackgroundBrush}" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="22" />
                <Setter Property="Margin" Value="8" />
                <Style Selector="^ > StackPanel">
                    <Setter Property="Spacing" Value="10" />
                    <Style Selector="^ TextBlock:nth-child(2)">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                </Style>
                <Style Selector="^ Button">
                    <Setter Property="Height" Value="56" />
                </Style>
                <Style Selector="^ Button.anycontent > Border">
                    <Setter Property="Padding" Value="13" />
                    <Setter Property="CornerRadius" Value="10" />
                    <Style Selector="^ > PathIcon">
                        <Setter Property="Width" Value="30" />
                        <Setter Property="Height" Value="30" />
                    </Style>
                </Style>
                <Style Selector="^ Button:nth-child(2)">
                    <Setter Property="HorizontalAlignment" Value="Right" />
                </Style>
            </Style>
        </Style>
    </UserControl.Styles>

    <ThemeVariantScope RequestedThemeVariant="Dark">
        <ScrollViewer Classes="main">
            <StackPanel Spacing="23" Background="{DynamicResource BrandWhiteBrush}">
                <TextBlock Classes="header" Text="Community" />
                <Image Source="/Assets/Images/banners/community.png" MaxWidth="1580" />
                <controls:FittingWrapPanel HorizontalAlignment="Center" MinItemWidth="280">
                    <Border>
                        <StackPanel>
                            <Panel>
                                <Button Classes="anycontent" ToolTip.Tip="Join Discord Server" Command="{Binding DiscordLinkCommand}">
