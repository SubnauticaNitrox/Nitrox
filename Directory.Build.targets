      <Private>$(TestLibrary)</Private>
    </Reference>

    <Reference Include="$(SubnauticaManaged)\Assembly-CSharp.dll">
      <Private>$(TestLibrary)</Private>
    </Reference>

    <Reference Include="$(SubnauticaManaged)\Assembly-CSharp-firstpass.dll">
      <Private>$(TestLibrary)</Private>
    </Reference>
  </ItemGroup>
</Project>
