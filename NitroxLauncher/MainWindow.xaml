<Window x:Class="NitroxLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NitroxLauncher"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Nitrox Launcher" Height="542" MinHeight="542" MaxHeight="542" Width="946" MinWidth="946" MaxWidth="946"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Icon="{StaticResource NitroxImage}"
        Closing="OnClosing">

    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="0"
            CaptionHeight="72"
            CornerRadius="0"
            GlassFrameThickness="3" />
    </WindowChrome.WindowChrome>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition />
        </Grid.RowDefinitions>



        <Grid Grid.Row="0" Background="#202225" Margin="250,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="687" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,437,0"/>
            <Button Margin="0,6,35,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Minimze_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height="26" Width="26">
                <Image Height="16" Width="16" Source="{StaticResource MinimizeImage}" Stretch="None" Margin="5,5,5,5" />
            </Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,6,0" Click="Close_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height="26" Width="26">
                <Image Source="{StaticResource ExitImage}" Stretch="None" Margin="5,5,5,5" />
            </Button>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Stretch" Background="#202225" Style="{StaticResource MainNavigationGrid}" Margin="0,-42,0,0"  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="533" />
                </Grid.RowDefinitions>
                <!-- Make sure the navigation items align vertically with the "NITROX" header. -->

                <Image Margin="32,32,131,483" Source="nitroxLogo.png" Stretch="Fill"/>

                <StackPanel Margin="32,82,0,286" x:Name="SideBarPanel" HorizontalAlignment="Left" Width="196">
                    <Button Click="ButtonNavigation_Click" Tag="{StaticResource LaunchGamePage}" ToolTip="Play the game" Content="Play game" />
                    <Button Click="ButtonNavigation_Click" Tag="{StaticResource ServerPage}" ToolTip="Configure server options" Content="Server" />
                    <Button Click="ButtonNavigation_Click" Tag="{StaticResource OptionPage}" ToolTip="Launcher settings" Content="Options" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="32,0,0,24" Height="39" Width="196">
                    <TextBlock Margin="0,0,0,8" FontSize="10" Foreground="#7FFFFFFF">NITROX RELEASE</TextBlock>
                    <TextBlock Margin="0,0,3,0" x:Name="NitroxVersionLabel" Foreground="White" Text="{Binding Version}" />
                </StackPanel>

                <Border BorderThickness="0 0 1 0" BorderBrush="#1EFFFFFF" />

            </Grid>

            <Frame Grid.Column="1" Background="#FF202225" x:Name="MainFrame" NavigationUIVisibility="Hidden" Content="{Binding FrameContent}" />
        </Grid>
    </Grid>
</Window>