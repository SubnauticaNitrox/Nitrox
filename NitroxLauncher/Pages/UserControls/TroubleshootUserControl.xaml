<UserControl x:Class="NitroxLauncher.Pages.UserControls.TroubleshootUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NitroxLauncher.Pages.UserControls"
             xmlns:models="clr-namespace:NitroxLauncher.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <StackPanel Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="{Binding ModuleImage}" Width="102" Height="29" Margin="5" />
        <TextBlock FontFamily="Inter" FontSize="14" Foreground="White" Margin="0,0,0,5" TextWrapping="Wrap" FontWeight="Regular" HorizontalAlignment="Center" Text="{Binding Module.Name, FallbackValue='Unknown Module'}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
            <!--<Image Source="{StaticResource StateKOIcon}" Width="10" Height="10" Margin="0,0,5,0" />-->
            <TextBlock FontFamily="Inter" FontSize="10" Foreground="White" TextWrapping="Wrap" FontWeight="Regular" HorizontalAlignment="Center" Text="Error"/>
        </StackPanel>
    </StackPanel>
    
</UserControl>
