                                                        FontSize="18" MaxLines="1"
                                                        Foreground="#8A8A8A" TextAlignment="Left"
                                                        Background="{x:Null}" BorderBrush="{x:Null}"
                                                        Margin="13,4,13,4" SelectionBrush="#FF007BFF"
                                                        VerticalAlignment="Center" BorderThickness="0" CaretBrush="White" MaxLength="10" LostKeyboardFocus="TBWorldSeed_Input" IsReadOnly="{Binding IsNewWorld, FallbackValue=False, Mode=OneWay}"/>
                                            </Border>
                                        </Grid>

                                        <!-- World Gamemode -->
                                        <Grid Grid.Row="1" Margin="0 20">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <!-- "Gamemode" Title -->
                                            <TextBlock Text="Gamemode: " Foreground="White" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                            <!-- Gamemode Tiles -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Freedom Mode Button -->
                                                <RadioButton Style="{StaticResource WorldGamemodeButton}" x:Name="RBFreedom" GroupName="ServerGamemode" VerticalAlignment="Center" ToolTip="Set the World Gamemode to Freedom Mode">
                                                    <TextBlock Text="Freedom" FontSize="18"/>
                                                </RadioButton>

                                                <!-- Survival Mode Button -->
                                                <RadioButton Style="{StaticResource WorldGamemodeButton}" x:Name="RBSurvival" GroupName="ServerGamemode" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" IsChecked="True" ToolTip="Set the World Gamemode to Survival Mode" Margin="0 0 3.333 0">
                                                    <TextBlock Text="Survival" FontSize="18"/>
                                                </RadioButton>

                                                <!-- Creative Mode Button -->
                                                <RadioButton Style="{StaticResource WorldGamemodeButton}" x:Name="RBCreative" GroupName="ServerGamemode" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" ToolTip="Set the World Gamemode to Creative Mode" Margin="3.333 0 0 0">
                                                    <TextBlock Text="Creative" FontSize="18"/>
                                                </RadioButton>

                                                <!-- Hardcore Mode Button -->
                                                <RadioButton Style="{StaticResource WorldGamemodeButton}" x:Name="RBHardcore" GroupName="ServerGamemode" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" ToolTip="Set the World Gamemode to Hardcore Mode">
                                                    <TextBlock Text="Hardcore" FontSize="18"/>
                                                </RadioButton>

                                            </Grid>
                                        </Grid>

                                        <!-- Game Options Tile -->
                                        <Grid Grid.Row="2" Margin="0 10 0 25">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <!-- "Game Options" Title -->
                                            <TextBlock Text="Game Options: " Foreground="White" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                            <!-- Options Pane -->
                                            <Border Grid.Row="1" CornerRadius="12" Background="#151516">
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40"/>
                                                        <!--<RowDefinition Height="40"/>-->
                                                    </Grid.RowDefinitions>

                                                    <!-- Column Seperator -->
                                                    <Border Grid.Column="2" Grid.RowSpan="3" Background="Black"/>
                                                    <Border Grid.Column="5" Grid.RowSpan="3" Background="Black"/>

                                                    <!-- Row 1 -->
                                                    <TextBlock Text="Enable Cheats" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Column="1" x:Name="CBCheats" IsChecked="True" ToolTip="Click to enable the use of commands in game (RECOMMENDED FOR NITROX)"/>

                                                    <TextBlock Grid.Column="3" Text="Max Players" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <Border Grid.Column="4" BorderBrush ="Black" Background="Black" BorderThickness="1" CornerRadius="8" Height="24" Width="45">
                                                        <TextBox x:Name="TBMaxPlayerCap"
                                                            FontSize="12" MaxLines="1" ToolTip="Set the max number of players that can join your world"
                                                            Foreground="#8A8A8A" TextAlignment="Center"
                                                            Background="{x:Null}" BorderBrush="{x:Null}"
                                                            Margin="4" SelectionBrush="#FF007BFF"
                                                            VerticalAlignment="Center" BorderThickness="0"
                                                            CaretBrush="White" Width="Auto" Text="100" LostKeyboardFocus="TBMaxPlayerCap_Input" />
                                                    </Border>

                                                    <!-- TODO - Once Mod Support is added -->
                                                    <!--<TextBlock Grid.Column="6" Text="Enable Mods" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Column="7" x:Name="CBEnableMods" Click="CBLanDiscovery_Clicked" IsChecked="{Binding EnableLanDiscoveryValue, Mode=OneWay, FallbackValue='True'}" ToolTip="Click to enable mods on this world."/>-->

                                                    <!-- Row 2 -->
                                                    <!-- TODO - Once/If PVP is added -->
                                                    <!--<TextBlock Grid.Row="1" Text="Enable PvP" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Row="1" Grid.Column="1" x:Name="CBEnablePvP" Click="CBAutoPortForward_Clicked" IsChecked="{Binding EnableAutoPortForwardValue, Mode=OneWay, FallbackValue='True'}" ToolTip="Click to enable Player vs. Player."/>-->

                                                    <!-- Once other TODOs are done, change these two to < Grid.Row="1" Grid.Column="3" > -->
                                                    <TextBlock Grid.Column="6" Text="Default Perms" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <ComboBox Grid.Column="6" Width="70" Grid.ColumnSpan="2" x:Name="CBBDefaultPerms" BorderThickness="1" Height="24" ToolTip="Set the permission level that new players will be assigned upon joining." HorizontalAlignment="Right" Margin="0 0 5.7 0">
                                                        <ComboBoxItem Content="Player" IsSelected="True"/>
                                                        <ComboBoxItem Content="Moderator"/>
                                                        <ComboBoxItem Content="Admin"/>
                                                    </ComboBox>

                                                    <!-- TODO - Once Mod Support is added -->
                                                    <!--<Button Style="{StaticResource LargeButton}" Click="ViewModsPlugins_Click" ToolTip="View the mods and plugins you currently have installed" Grid.Row="1" Grid.Column="6" Content="View Mods/Plugins" Foreground="White" FontSize="15" Grid.ColumnSpan="2" Background="#FF007BFF" Height="23" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 0 5.7 0"/>-->

                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Server Options Tile -->
                                        <Grid Grid.Row="3" Margin="0 10 0 25">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <!-- "Server Options" Title -->
                                            <TextBlock Text="Server Options: " Foreground="White" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                            <!-- Options Pane -->
                                            <Border Grid.Row="1" CornerRadius="12" Background="#151516">
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="151*"/>
                                                        <ColumnDefinition Width="60*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40"/>
                                                        <RowDefinition Height="40"/>
                                                        <RowDefinition Height="40"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Column Seperators -->
                                                    <Border Grid.Column="2" Grid.RowSpan="3" Background="Black"/>
                                                    <Border Grid.Column="5" Grid.RowSpan="3" Background="Black"/>

                                                    <!-- Row 1 -->
                                                    <TextBlock Grid.Column="0" Text="Load Full World" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Column="1" x:Name="CBCreateFullEntityCache" IsChecked="False" ToolTip="Click to enable the server to fully load the world's entity cache at startup (NOTE: Can reduce lag, but the server will take longer to start up)"/>

                                                    <TextBlock Grid.Column="3" Text="Autosave" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Column="4" x:Name="CBAutoSave" IsChecked="True" ToolTip="Click to enable the server to automatically save the world in specified time intervals."/>

                                                    <TextBlock Grid.Column="6" Text="Enable Password" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Column="7" x:Name="CBEnableJoinPassword" Click="CBEnableJoinPassword_Clicked" IsChecked="False" ToolTip="Click to enable requiring a password to join the world."/>

                                                    <!-- Row 2 -->
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Auto Portforward" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Row="1" Grid.Column="1" x:Name="CBAutoPortForward" IsChecked="True" ToolTip="Click to enable automatic Port Forwarding using UPnP (NOTE: Not all routers support this functionality)"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Save Interval (s)" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <Border  Grid.Row="1" Grid.Column="4" BorderBrush ="Black" Background="Black" BorderThickness="1" CornerRadius="8" Height="24" Width="45">
                                                        <TextBox x:Name="TBSaveInterval" MaxLength="7"
                                                            FontSize="12" MaxLines="1" ToolTip="Set the interval that the server saves your world (in seconds)"
                                                            Foreground="#8A8A8A" TextAlignment="Center"
                                                            Background="{x:Null}" BorderBrush="{x:Null}"
                                                            Margin="4" SelectionBrush="#FF007BFF"
                                                            VerticalAlignment="Center" BorderThickness="0"
                                                            CaretBrush="White" Width="Auto" Text="120" LostKeyboardFocus="TBSaveInterval_Input" />
                                                    </Border>

                                                    <TextBlock Grid.Row="1" Grid.Column="6" x:Name="JoinPasswordTitle" Text="Join Password" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <Border Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" BorderBrush ="Black" Background="Black" BorderThickness="1" CornerRadius="8" Height="24" Width="76" HorizontalAlignment="Right" Margin="0 0 5.7 0">
                                                        <TextBox x:Name="TBJoinPassword"
                                                            FontSize="12" MaxLines="1" ToolTip="Set the password that players will need to join your world."
                                                            Foreground="#8A8A8A" TextAlignment="Left"
                                                            Background="{x:Null}" BorderBrush="{x:Null}"
                                                            Margin="4" SelectionBrush="#FF007BFF"
                                                            VerticalAlignment="Center" BorderThickness="0"
                                                            CaretBrush="White" Width="Auto" LostKeyboardFocus="TBJoinPassword_Input" />
                                                    </Border>

                                                    <!-- Row 3 -->
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Server Port" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <Border Grid.Row="2" Grid.Column="1" BorderBrush ="Black" Background="Black" BorderThickness="1" CornerRadius="8" Height="24" Width="45">
                                                        <TextBox x:Name="TBWorldServerPort"
                                                            FontSize="12" MaxLines="1" ToolTip="Set the port number that the server will use with this world. NOTE: It can be the same as every other world."
                                                            Foreground="#8A8A8A" TextAlignment="Center"
                                                            Background="{x:Null}" BorderBrush="{x:Null}"
                                                            Margin="4" SelectionBrush="#FF007BFF"
                                                            VerticalAlignment="Center" BorderThickness="0"
                                                            CaretBrush="White" Width="Auto" MaxLength="5" Text="11000" LostKeyboardFocus="TBWorldServerPort_Input" />
                                                    </Border>

                                                    <TextBlock Grid.Row="2" Grid.Column="3" Text="LAN Discovery" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="15" Margin="10 0 0 0"/>
                                                    <CheckBox Style="{StaticResource OptionSwitch}" Grid.Row="2" Grid.Column="4" x:Name="CBLanDiscovery" IsChecked="True" ToolTip="Click to enable the server to be discovered by other computers connected to the same network."/>

                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>

            </Grid>

        </Grid>

        <Grid x:Name="ConfirmationBox" Opacity="0" IsHitTestVisible="False" Grid.RowSpan="2">

            <!-- Have all of the background act like the "No" button when clicked -->
            <Button Click="NoConfirmBtn_Click" Background="Black" Opacity=".5" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" Cursor="Arrow"/>

            <Border Background="Black" Height="150" Width="300" BorderThickness="5" BorderBrush="#151516" CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Are you sure you want to delete this world?" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" TextWrapping="Wrap" TextAlignment="Center" Width="250"/>

                    <Button Click="YesConfirmBtn_Click" Grid.Row="1" Style="{StaticResource LargeButton}" Background="#151516" Height="50" Width="100" VerticalAlignment="Top" Content="Yes"/>
                    <Button Click="NoConfirmBtn_Click" Grid.Row="1" Grid.Column="1" Style="{StaticResource LargeButton}" Background="#FF007BFF" Height="50" Width="100" VerticalAlignment="Top" Content="No"/>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="ImportWorldBox" Opacity="0" IsHitTestVisible="False" Grid.RowSpan="2">

            <!-- Have all of the background act like the "Cancel" button when clicked -->
            <Button Click="ImportWorldCancelBtn_Click" Background="Black" Opacity=".5" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}" Cursor="Arrow"/>

            <Border Background="#151516" Height="460" Width="400" CornerRadius="20">
                <Grid>
                    <TextBlock Grid.ColumnSpan="2" Text="Import a save file" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" TextWrapping="Wrap" TextAlignment="Center" Width="250" Margin="0 13" FontWeight="Bold"/>

                    <Border Background="Black" CornerRadius="15" Margin="10 55 10 10">
                        <StackPanel>

                            <Grid Margin="20 20 20 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="World Name:" Foreground="White" VerticalAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
                                <Border Grid.Column="2" Grid.Row="1" BorderBrush ="#333437" Background="#333437" BorderThickness="1" CornerRadius="8" Margin="10 0 0 0" Height="30">
                                    <TextBox x:Name="TBImportedWorldName"
                                                        FontSize="18" MaxLines="1" ToolTip="Set the world name"
                                                        Foreground="#8A8A8A" TextAlignment="Left"
                                                        Background="{x:Null}" BorderBrush="{x:Null}"
                                                        Margin="13,4,13,4" SelectionBrush="#FF007BFF"
                                                        VerticalAlignment="Center" BorderThickness="0"
                                                        CaretBrush="White" MaxLength="25" LostKeyboardFocus="TBImportedWorldName_Input" />
                                </Border>
                            </Grid>
                            

                            <TextBlock Grid.ColumnSpan="2" Text="Select save folder" Foreground="White" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap" Margin="20 30 20 5"/>
                            <Border Height="60" Margin="20 0" Background="#151516" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="115"/>
                                    </Grid.ColumnDefinitions>

                                    <ScrollViewer Margin="15 0 0 0">
                                        <TextBlock x:Name="TBSelectedSaveImportDir" Text="Select the save file to import" FontSize="12" FontStyle="Italic" Foreground="#8A8A8A" VerticalAlignment="Center" TextWrapping="Wrap"/>

                                        <!-- Fix the Scroll Bar -->
                                        <ScrollViewer.Resources>
                                            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ScrollBar}">

                                                            <Grid x:Name="GridRoot" Width="6" Background="{x:Null}">
                                                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                                                    <Track.Thumb>
                                                                        <Thumb x:Name="Thumb" Background="#26FFFFFF" Style="{DynamicResource ScrollThumbs}"/>
                                                                    </Track.Thumb>
                                                                    <Track.IncreaseRepeatButton>
                                                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                                                    </Track.IncreaseRepeatButton>
                                                                    <Track.DecreaseRepeatButton>
                                                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                                                    </Track.DecreaseRepeatButton>
                                                                </Track>
                                                            </Grid>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                                                    <Setter Value="#3FFFFFFF" TargetName="Thumb" Property="Background"/>
                                                                </Trigger>
                                                                <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                                                    <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                                                                </Trigger>

                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                                                </Trigger>
                                                                <Trigger Property="Orientation" Value="Horizontal">
                                                                    <Setter TargetName="GridRoot" Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <RotateTransform Angle="-90"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <RotateTransform Angle="-90"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="Width" Value="Auto"/>
                                                                    <Setter Property="Height" Value="12"/>
                                                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                                                    <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>

                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ScrollViewer.Resources>
                                    </ScrollViewer>
                                    
                                    <Button Grid.Column="1" Style="{StaticResource LargeButton}" Click="SelectImportedSaveFileBtn_Click" Background="#FF007BFF" Width="90" Height="35" ToolTip="Select the directory of the save folder you want to import" FontSize="15" FontWeight="Bold" Content="Select"/>
                                </Grid>
                            </Border>

                            <TextBlock Grid.ColumnSpan="2" Text="Select server.cfg file" Foreground="White" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap" Margin="20 30 20 5"/>
                            <Border Height="60" Margin="20 0" Background="#151516" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="115"/>
                                    </Grid.ColumnDefinitions>

                                    <ScrollViewer Margin="15 0 0 0">
                                        <TextBlock x:Name="TBSelectedServerCfgImportDir" Text="Select the server.cfg file to import" FontSize="12" FontStyle="Italic" Foreground="#8A8A8A" VerticalAlignment="Center" TextWrapping="Wrap"/>

                                        <!-- Fix the Scroll Bar -->
                                        <ScrollViewer.Resources>
                                            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ScrollBar}">

                                                            <Grid x:Name="GridRoot" Width="6" Background="{x:Null}">
                                                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                                                    <Track.Thumb>
                                                                        <Thumb x:Name="Thumb" Background="#26FFFFFF" Style="{DynamicResource ScrollThumbs}"/>
                                                                    </Track.Thumb>
                                                                    <Track.IncreaseRepeatButton>
                                                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                                                    </Track.IncreaseRepeatButton>
                                                                    <Track.DecreaseRepeatButton>
                                                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                                                    </Track.DecreaseRepeatButton>
                                                                </Track>
                                                            </Grid>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                                                    <Setter Value="#3FFFFFFF" TargetName="Thumb" Property="Background"/>
                                                                </Trigger>
                                                                <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                                                    <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                                                                </Trigger>

                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                                                </Trigger>
                                                                <Trigger Property="Orientation" Value="Horizontal">
                                                                    <Setter TargetName="GridRoot" Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <RotateTransform Angle="-90"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <RotateTransform Angle="-90"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="Width" Value="Auto"/>
                                                                    <Setter Property="Height" Value="12"/>
                                                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                                                    <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>

                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
