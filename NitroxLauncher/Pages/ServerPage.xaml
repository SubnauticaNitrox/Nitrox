                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Setter Property="Width" Value="Auto"/>
                                                                    <Setter Property="Height" Value="12"/>
                                                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                                                    <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>

                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ScrollViewer.Resources>
                                    </ScrollViewer>

                                    <Button Grid.Column="1" Style="{StaticResource LargeButton}" x:Name="SelectImportedServerCfgBtn" Click="SelectImportedServerCfgBtn_Click" Background="#FF007BFF" Width="90" Height="35" ToolTip="Select the directory of the server.cfg file you want imported with your selected save file" FontSize="15" FontWeight="Bold" Content="Select" IsEnabled="False" Opacity=".6"/>
                                </Grid>
                            </Border>
                            
                            <Grid Margin="20 30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Click="ImportWorldCancelBtn_Click" Style="{StaticResource LargeButton}" Background="#151516" Height="50" Width="160" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Cancel" ToolTip="Cancel the save file import"/>
                                <Button x:Name="ImportWorldBtn" Click="ImportWorldBtn_Click" Grid.Column="1" Style="{StaticResource LargeButton}" Background="#FF007BFF" Height="50" Width="160" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Import" ToolTip="Import the selected save files" Opacity=".6" IsEnabled="False"/>
                            </Grid>

                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Grid>

