                                        </Style>
                                    </ScrollViewer.Resources>

                                    <Grid Margin="25 25 25 0" Height="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!-- World Name and Seed (1st Row) -->
                                        <Grid Margin="0 0 0 10">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="300"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="15" />
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>

                                            <!-- Row 0 -->
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Foreground="White" FontSize="20" FontWeight="SemiBold" />

                                            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#333437" Width="280" HorizontalAlignment="Left" Background="#333437" BorderThickness="1" CornerRadius="5">
                                                <TextBox x:Name="TBWorldName"
                                                        ToolTip="Set the world name"
                                                        FontSize="18" MaxLines="1" TextAlignment="Left"
                                                        Foreground="#8A8A8A" SelectionBrush="#FF007BFF"
                                                        Background="{x:Null}" BorderBrush="{x:Null}"
                                                        Margin="13,4,13,4" 
                                                        VerticalAlignment="Center" BorderThickness="0"
                                                        CaretBrush="White" MaxLength="40" Text="World name" LostKeyboardFocus="TBWorldName_Input" />
                                            </Border>

                                            <!-- Row 2 -->
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Seed" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
                                            <Border Grid.Row="2" Grid.Column="1" Width="140" BorderBrush="#333437" HorizontalAlignment="Left" Background="#333437" BorderThickness="1" CornerRadius="5">
                                                <TextBox x:Name="TBWorldSeed"
