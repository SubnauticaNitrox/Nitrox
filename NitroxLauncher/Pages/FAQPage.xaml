<local:PageBase x:Class="NitroxLauncher.Pages.FAQPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NitroxLauncher.Models"
      xmlns:pages="clr-namespace:NitroxLauncher.Pages"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="800"
      d:DesignWidth="800"
      Title="FAQPage">

    <Grid>
        <Grid Margin="32,0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="106"/>
                <RowDefinition Height="37"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="32" Foreground="White" TextWrapping="Wrap" Margin="0" VerticalAlignment="Bottom" FontWeight="Bold" Text="FAQ"/>

            <StackPanel Grid.Row="1">
                <TextBlock FontSize="14" Foreground="#BFFFFFFF" TextAlignment="Left" VerticalAlignment="Top" Margin="0,12,0,0" >
                    Welcome to our Frequently Ask Questions !
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2">
                
            </StackPanel>

        </Grid>
    </Grid>

</local:PageBase>