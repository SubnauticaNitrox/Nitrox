<Page x:Class="NitroxLauncher.LaunchGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NitroxLauncher"
      mc:Ignorable="d"
      d:DesignHeight="470" d:DesignWidth="719"
      Title="Launch Game"
      Margin="0">
    <Page.Resources>

    </Page.Resources>
    <Grid>
        <Image x:Name="BackgroundImage" Source="Images/PlayGameImage.png" Grid.Column="0" Grid.RowSpan="2" Height="553"
               Width="1125.43" Opacity="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <Grid Height="470" Width="719" Margin="0,52,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image Stretch="Fill" Source="Images/SubnauticaMain.png" RenderTransformOrigin="0.478,0.444"
                   Margin="108,2,108,392" />
        </Grid>
        <Grid Margin="0,204,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="522.07" Height="98">
            <TextBlock FontSize="14" Foreground="White" TextWrapping="Wrap" Margin="0,0,0.07,0">
                Nitrox is an open-source, multiplayer modification for the game Subnautica
                <LineBreak />
                <LineBreak />
                The mod is in the very early stages of development; however, a solid foundation
                has been laid for the community to iterate on
            </TextBlock>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,300,0,0">
            <Button Margin="0,0,10,0" Background="#19FFFFFF" BorderBrush="#66FFFFFF"
                    Style="{StaticResource LargeButton}" Click="SinglePlayerButton_Click" ToolTip="Play alone">
                <TextBlock Padding="0,4,0,0" Foreground="White">SINGLEPLAYER</TextBlock>
            </Button>

            <Button Width="225" Margin="10,0,0,0" Style="{StaticResource LargeButton}" Click="MultiplayerButton_Click"
                    ToolTip="Launch the game with multiplayer enabled.">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF00B1E9" Offset="0" />
                        <GradientStop Color="#FF006BE9" Offset="1" />
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="22" FontWeight="Bold">PLAY</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="16">MULTIPLAYER</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>